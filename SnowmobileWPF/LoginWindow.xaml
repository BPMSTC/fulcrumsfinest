<Window x:Class="SnowmobileWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnowmobileWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="151" Width="305">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Content="IP" HorizontalAlignment="Right" Margin="95,0,0,0" Padding="10,0,20,0" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="152,0,0,0" TextWrapping="Wrap" Text="127.0.0.1:1433" VerticalAlignment="Center" Width="120" Grid.ColumnSpan="2"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="68,0,0,0" Padding="10,0,20,0" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="152,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="68,0,0,0" Padding="10,0,20,0" VerticalAlignment="Center" Grid.Row="2"/>
        <TextBox HorizontalAlignment="Left" Margin="152,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.ColumnSpan="2" Grid.Row="2"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="152,0,0,0" Grid.Row="3" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="120"/>
    </Grid>
</Window>
