<Window x:Class="SnowmobileWPF.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnowmobileWPF"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="372" Width="290">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Search..." HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="24" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Content="VSCA" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox Margin="10,0,10,0" Grid.Row="1" Grid.Column="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <Label Content="First name" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox Margin="10,0,10,0" Grid.Row="2" Grid.Column="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <Label Content="Last name" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox Margin="10,0,10,0" Grid.Row="3" Grid.Column="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <Label Content="Phone number" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2"/>
        <TextBox Margin="10,0,10,0" Grid.Row="4" Grid.Column="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <Button Grid.Column="2" Content="Search" Margin="10,10,10,10" Grid.Row="5"/>
        <Button Grid.Column="0" Content="Cancel" Margin="10,10,10,10" Grid.Row="5" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
